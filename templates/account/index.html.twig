{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}
    <div class="container full">
        <div class="row">
            <div class="col-md-6 offset-md-3 bg-light p-3">
                <h1>Connexion</h1>
                
                {% if hasError %}
                    <div class="alert alert-danger">
                        Une erreur est survenue, le mot de passe ou l'email est invalide
                    </div>
                {% endif %}
                    
                {% if loginError %}
                    <div class="alert alert-danger">
                        $loginError
                    </div>
                {% endif %}
                
                

                <form action="{{path('account_login')}}" method="POST">
                    <div class="form-group my-2">
                        <label for="email">Email: </label>
                        <input type="email" name="_username" id="email" class="form-control" palceholder="Votre email..." required value="{{username}}">
                    </div>
                    <div class="form-group my-2">
                        <label for="password">Password: </label> 
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Votre mot de passe.." required value="">
                    </div>
                    <div class="form-group my-2">
                        <button type="sumbit" class="btn btn-success my-3">Connexion au site</button>
                    </div>
                </form>
            </div> 
        </div>
    </div>
{% endblock %}
