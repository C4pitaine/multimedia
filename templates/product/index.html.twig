{% extends 'base.html.twig' %}

{% block title %}Nos Produits{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for product in products %}
                {% set url = path('product_show', {'slug': product.slug}) %}
                    <div class="col-md-4 my-3">
                        <div class="card bg-light mb-3">
                            <div class="card-header text-center">
                                {{product.name}}<strong> {{product.price}}â‚¬</strong>
                            </div>
                            <a href="{{url}}" class="carte">
                                <img src="{{product.coverImage}}" alt="Image de l'annonce {{product.name}}" class="starsimg">
                            </a>
                            <div class="card-body">
                                <h4 class="card-title">{{product.type}}</h4>
                                <p class="card-text">{{product.marque}}</p>
                                <a href="{{url}}" class="btn btn-secondary">En savoir plus</a>
                            </div>
                        </div>
                    </div>
            {% endfor %}
        </div>
    </div>
    
{% endblock %}
